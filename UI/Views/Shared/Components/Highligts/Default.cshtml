
@using Entity.Concrete
@model List<Highlights>

<div class="best-rooms py-5">
    <div class="container py-md-5">
        <div class="ban-content-inf row">

            @{
                var values1 = Model.Take(1);
                var values2 = Model.TakeLast(2);
                string cssCard = null;
            }

            @if (values1.Any(x => x.HighlightsId == Model[0].HighlightsId))
            {
                <div class="maghny-gd-1 col-lg-6">
                    <div class="maghny-grid">
                        <figure class="effect-lily border-radius  m-0">
                            <img class="img-fluid" src="@Model[0].Post1Image" alt="" />
                            <figcaption>
                                <div>
                                    <h4>@Model[0].Post1Name</h4>
                                    <p>@Model[0].Post1Description </p>
                                </div>

                            </figcaption>
                        </figure>
                    </div>
                </div>
            }
            <div class="maghny-gd-1 col-lg-6 mt-lg-0 mt-4">
                <div class="row">
                    @foreach (var item in Model.Skip(1).ToList())
                    {
                        @if (values2.Any(x => x.HighlightsId == item.HighlightsId)) cssCard = "mt-4";
                        else cssCard = null;
                        <div class="maghny-gd-1 col-6 @cssCard">
                            <div class="maghny-grid">
                                <figure class="effect-lily border-radius">
                                    <img class="img-fluid" src="@item.Post1Image" alt="" />
                                    <figcaption>
                                        <div>
                                            <h4>@item.Post1Name</h4>
                                            <p>@item.Post1Description </p>
                                        </div>

                                    </figcaption>
                                </figure>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>